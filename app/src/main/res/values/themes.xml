<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorStatusBar</item>

        <!-- ActionBar theme & style -->
        <item name="actionBarStyle">@style/AppActionBarSolidStyle</item>
        <item name="actionBarTheme">@style/AppActionBarOverlayTheme</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <!-- Customize your theme here -->
    </style>

    <!-- Theme for action bar -->
    <style name="AppActionBarOverlayTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary -->
        <item name="android:textColorPrimary">@color/appBar_color</item>
        <item name="android:textColorSecondary">@color/appBar_color</item>
        <item name="android:textColorHighlight">@color/appBar_color</item>
    </style>

    <!-- Style for action bar -->
    <style name="AppActionBarSolidStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/appBar_background</item>
        <item name="titleTextStyle">@style/AppBarTitleStyle</item>
        <item name="subtitleTextStyle">@style/AppBarTitleStyle</item>
    </style>

    <!-- Style for action bar title text -->
    <style name="AppBarTitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="titleTextColor">@color/appBar_color</item>
        <item name="subtitleTextColor">@color/appBar_color</item>
    </style>

</resources>